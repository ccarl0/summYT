{
    "name": "summYT",
    "description": "Summarize any YouTube video with just one click!",
    "version": "0.1.0",
    "manifest_version": 3,
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://https://www.youtube.com/*"
            ],
            "run_at": "document_end",
            "js": [
                "contentScript.js"
            ]
        }
    ],
    
    "action": {
        "default_popup": "popup.html",
        "default_icon": {}
    }
}